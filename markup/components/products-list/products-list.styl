$max-width-prod-list = 215px
.products-list
  overflow hidden
  max-width $max-width-prod-list
  margin 0 auto

  .slick-list
    margin 0 -10px

  .product-item
    margin 0 10px 20px

  @media (min-width 480px)
    max-width $max-width-prod-list*2 + 20px

  @media (min-width $screen-sm-min)
    max-width $max-width-prod-list*3 + 20px*2

    &:not(.slick-slider)
      max-width none
      display flex
      flex-flow row wrap
      margin 0 -10px
      .product-item
        flex none
        width unquote('calc(' + percentage(1/3) + ' - 20px)')
        margin 0 10px 20px

  @media (min-width $screen-lg-min)
    max-width $max-width-prod-list*4 + 20px*3