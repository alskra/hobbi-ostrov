.btn
  &__label
    display block
    text-overflow ellipsis
  &__icon
    flex none
    display block
  &_1
    color white
    font-weight 700
    font-size 13px
    line-height 1.1em
    text-transform uppercase
    padding 12px 15px
    background-color $green-3
    border-radius 2px
    &:hover,
    &:focus,
    &.focus
      color white
      background-color $green-1
    &:active,
    &.active
      box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)

