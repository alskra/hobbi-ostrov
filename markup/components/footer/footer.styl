.footer
  flex none
  line-height 1.25
  background-color #e4e2e2

  p
    &:last-child
      margin 0

  .social-networks
    margin 15px 0

  &__top
    overflow hidden
    position relative

    .grid__col
      padding-top 30px
      padding-bottom 30px
      position relative

      &_1
        background url("footer-bg-sm.jpg") no-repeat 0 0/cover

      &_3
        padding-top 0

        & {$p}__title
          margin-bottom 27px

        p
          margin-bottom 15px

  &__bottom
    font-size 13px
    color white
    padding 18px 0
    background-color #848484

    a
      color inherit
      text-decoration none
      &:hover, &:focus
        color $green-7
        text-decoration none

  &__title
    color #373737
    font-size 17px
    font-weight 400
    line-height 1.25
    text-align center
    margin 0 0 30px

    &_2
      display none

  &__contacts
    text-align center
    max-width 320px
    margin 0 auto

  &__tel
    color #747474
    font-size 17px
    text-decoration none
    &:hover, &:focus
      color #747474
      text-decoration none

  &__pay
    font-size 14px

  &__developer
    display block
    width 99px
    height 20px
    margin 0 auto
    fill currentColor

  &__developer-logo
    display block
    width 100%
    height 100%

  &__copyright
    text-align center

  @media $media-retina
    &__top
      .grid__col
        &_1
          background-image url("footer-bg-sm@2x.jpg")

  @media (min-width 541px)
    &__title
      text-align left

      &_2
        display block

    &__developer
      margin 21px auto

  @media (min-width 541px)
    &__top
      .grid__col
        &_3
          padding-top 30px

    &__contacts
      text-align left
      max-width none
      margin-left 0
      margin-right 0

  @media (min-width $screen-sm-min)
    .social-networks
      justify-content flex-start
      margin 4px 0 0 -11px

    &__top
      .grid__col
        padding-top 30px

    &__developer
      margin 10px 0 0 auto

    &__copyright
      text-align left

  @media (min-width $screen-md-min)
    .social-networks
      margin -6px 0 -6px -11px

    &__top
      &:before
        content ''
        pointer-events none
        position absolute
        top 0
        right 50%
        bottom 0
        left 0
        margin-right percentage(52/1170)
        background url("footer-bg-md.jpg") no-repeat 0 0/cover

      .grid__col
        padding-top 50px
        padding-bottom 55px

        &_1
          background none

    &__copyright
      margin 2px 0

    &__developer
      margin-top 0

    @media $media-retina
      &__top
        &:before
          background-image url("footer-bg-md@2x.jpg")

  @media (min-width $screen-lg-min)


    &__top
      &:before
        margin-right 52px





