.form-subscribe
  text-align center

  &__title
    color #373737
    font-size 18px
    font-weight 400
    line-height 1.25
    text-align center
    margin 0 0 35px

  &__field
    display block
    color $text-color
    font-size 14px
    line-height 36px
    font-weight 400
    width 100%
    max-width 294px
    height 38px
    padding 0 10px
    margin 0 auto 30px
    background-color white
    border 1px solid #d4d4d4
    border-radius 2px
    transition $transition-base
    &::placeholder
      color #989898
    &:focus
      border-color $green-1

  &__btn
    width 137px